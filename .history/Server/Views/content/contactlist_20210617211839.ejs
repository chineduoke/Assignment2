<div class="container">
<h1>Contact List</h1>

<div class="row">
    <div class=" col-md-11">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Contact Name</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Email Address</th>
                <th scope="col"></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>

             <!-- Repeatable Row Template -->   

             <% for(let count = 0; count < contact.length; count++) { %>
              
                <tr>
                    <th scope="row"><%= count + 1 %></th>
                    <td><%= contact[count].contactName %></td>
                    <td><%= contact[count].contactNumber %></td>
                    <td><%= contact[count].emailAddress %></td>
                    <td>
                      <a href="/contactlist/update/<%= contact[count]._id %>" class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Update</a>
                    </td>
                    <td class="col-1">
                    <a href="/contactlist/delete/<%= contact[count]._id %>" class="btn btn-danger">
                      <i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
              <% } %>

            </tbody>
          </table>
    </div>
</div>
</div>